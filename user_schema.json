{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/user.schema.json",
  "title": "User Document",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier for the user (Firestore UID)"
    },
    "display_name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "photo_url": {
      "type": "string",
      "format": "uri"
    },
    "birthdate": {
      "type": "string",
      "format": "date-time",
      "description": "Firestore timestamp stored as ISO 8601 string"
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Firestore timestamp stored as ISO 8601 string"
    },
    "hometown": {
      "type": "string"
    }
  },
  "required": ["uid", "display_name", "email", "created_time"]
}
