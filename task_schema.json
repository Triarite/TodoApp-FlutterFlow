{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/task.schema.json",
  "title": "Task Document",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "details": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Firestore timestamp stored as ISO 8601 string"
    },
    "user": {
      "type": "string",
      "description": "Reference to a user document in /users",
      "pattern": "^/users/[A-Za-z0-9_-]+$"
    }
  },
  "required": ["title", "completed", "created", "user"]
}
